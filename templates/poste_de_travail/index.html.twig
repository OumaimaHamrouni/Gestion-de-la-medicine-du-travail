{% extends 'base.html.twig' %}

{% block title %}poste de travail index{% endblock %}

{% block body %}




    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">

                    <div class="chat-room-head ">

                        <h2><i class="fa fa-angle-right"></i> liste des postes</h2>


                    </div>

                    <br>
                    <div class="col-lg-1">
                        <button type="button" class="btn btn-primary btn-success btn-lg color-block mb-2 mx-12 z-depth-1 btn-rounded">
                            <a href="{{ path('poste_de_travail_new') }}" ><i class="text-white fa fa-plus">  poste</i> </a></button>
                    </div>

                    <thead>
                    <tr>
                        <th scope="col-6" >Nom</th>
                        <th scope="col-6"> Refrence</th>
                        <th scope="col-6"> lieu</th>
                        <th scope="col-6"> Atelier</th>
                        <th scope="col-6" >                </th>
                        <th scope="col-6" >Action </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for poste_de_travail in poste_de_travails %}
                        <tr >

                        <td>{{ poste_de_travail.nom }}</td>
                        <td>{{ poste_de_travail.refrence }}</td>
                        <td>{{ poste_de_travail.lieu }}</td>
                        <td>{{ poste_de_travail.atelier}}</td>

                        <td>
                        <td>
                            <div class="row mt">

                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <div scope="col-1">
                                        <button type="button"class="btn btn-theme02">

                                            <a href="{{ path('poste_de_travail_show', {'id': poste_de_travail.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i> </a></button>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-1">
                                        <button type="button"class="btn btn-info">
                                            <a href="{{ path('poste_de_travail_edit', {'id': poste_de_travail.id}) }}"title="Modifier" ><i class="text-white fa fa-pencil "></i></a></button>
                                    </div>
                                    </div>
                                </form>
                            </div>
                        </td>


                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}
