{% extends 'base.html.twig' %}

{% block title %}Risque index{% endblock %}

{% block body %}



    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">

                    <div class="chat-room-head ">

                        <h2><i class="fa fa-angle-right"></i> liste des risques </h2>


                    </div>

                    <br>
                    <div class="col-lg-3">
                        <button type="button" class="btn btn-primary btn-success btn-lg color-block mb-2 mx-12 z-depth-1 btn-rounded">
                            <a href="{{ path('risque_new') }}" ><i class="text-white fa fa-plus-circle" aria-hidden="true"> risque  </i> </a></button>
                    </div>

                    <thead>
                    <tr>

                        <th scope="col-6" >type</th>

                        <th scope="col-6" >Description</th>

                        <th scope="col-2"> Action </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for risque in risques %}
                        <tr>


                        <td>{{ risque.type}}</td>
                        <td>{{ risque.description}}</td>

                        <td>
                            <div class="row mt">

                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <div class="col-lg-3">
                                        <button type="button"class="btn btn-theme02">

                                            <a href="{{ path('risque_show', {'id': risque.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i> </a></button>

                                    </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-3">

                                        <button type="button"class="btn btn-info">
                                            <a href="{{ path('risque_edit', {'id': risque.id}) }}"title="Modifier" ><i class="text-white fa fa-pencil "></i></a></button>
                                    </div>
                                    </div>

                                </form>
                            </div>
                        </td>


                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}