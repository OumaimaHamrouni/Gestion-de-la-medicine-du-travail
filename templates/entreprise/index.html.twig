{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}




    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">

                    <div class="chat-room-head ">

                        <h2><i class="fa fa-angle-right"></i> liste des entreprises</h2>


                    </div>

                    <br>
                    <div class="col-lg-1">
                        <button type="button" class="btn btn-primary btn-success btn-lg color-block mb-2 mx-12 z-depth-1 btn-rounded">
                            <a href="{{ path('entreprise_new') }}" ><i class="text-white fa fa-plus-circle" aria-hidden="true">  entreprise </i> </a></button>
                    </div>

                    <thead>
                    <tr>
                        <th scope="col-6" >Logo</th>
                        <th scope="col-6" >Nom</th>
                        <th scope="col-6" >Adress</th>
                        <th scope="col-6" >Mail</th>
                        <th scope="col-6"> Action </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entreprise in entreprises %}
                        <tr>

                        <td><img src ="{{ asset('uploads/images/' ~ entreprise.logo) }}" alt =""  width="100" height="100"></td>
                        <td>{{ entreprise.nom }}</td>
                        <td>{{ entreprise.adress }}</td>
                        <td>{{ entreprise.email }}</td>
                        <td>
                            <div class="row mt">

                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <div class="col-lg-">
                                        <button type="button"class="btn btn-theme02">

                                            <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i></a></button>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-1">
                                        <button type="button"class="btn btn-info">
                                            <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"title="Modifier" ><i class="text-white fa fa-pencil "></i></a></button>
                                    </div>
                                    </div>
                                </form>
                            </div>
                        </td>


                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}