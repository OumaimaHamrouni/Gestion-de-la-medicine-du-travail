


{% extends 'base.html.twig' %}

{% block title %}Edit Entreprise {% endblock %}

{% block body %}


<div class="wrapper site-min-height">
    <!-- page start-->
    <div class="chat-room mt">
        <div class="col-lg-12">
            <aside class="mid-side">
                <div class="chat-room-head">
                    {{ form_start(form  , {'action': path('entreprise_edit', {'id': entreprise.id})}) }}
                    <h3>Entreprise : {{ entreprise.nom }}</h3>

                    <div class="group-row">
                        <div class="col-md-4 centered">
                            <div class="profile-pic">
                                <p><img src="{{ asset('uploads/images/' ~ entreprise.logo) }}"></p>

                            </div>

                        </div>



                    </div>

                    <div class="group-rom">
                        <div class="first-part odd">Nom</div>
                        <div class="second-part">   {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}</div>

                    </div>



                    <div class="group-rom">
                        <div class="first-part odd">Adress <i class="fa fa-map-marker" aria-hidden="true"></i></div>
                        <div class="second-part">   {{ form_widget(form.adress, {'attr':{'class':'form-control'}}) }}</div>

                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">numéro de téléphone <i class="fa fa-phone" aria-hidden="true"></i></div>
                        <div class="second-part">  {{ form_widget(form.tel, {'attr':{'class':'form-control'}}) }}</div>
                    </div>

                    <div class="group-rom">
                        <div class="first-part odd">Fax <i class="fa fa-fax" aria-hidden="true"></i></div>
                        <div class="second-part">{{ form_widget(form.fax, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Email  <i class="fa fa-envelope-o" aria-hidden="true"></i></div>
                        <div class="second-part">  {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Logo  <i class="fa fa-picture-o" aria-hidden="true"></i></div>
                        <div class="second-part">  {{ form_widget(form.logo, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Num TVA  </div>
                        <div class="second-part">  {{ form_widget(form.num_tva, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">personne  a contact  <i class="fa fa-user-circle" aria-hidden="true"></i></div>
                        <div class="second-part"> {{ form_widget(form.personne_contact, {'attr':{'class':'form-control'}}) }}</div>
                    </div>





                    <div class="group-rom ">
                        <div class="row justify-content-center">
                            <br>
                            <br>
                            <div class="col-lg-3">
                                <button type="submit" class="btn btn-success btn-lg mb-1 mx-auto z-depth-5 btn-rounded " value="{{ button_label|default }}"class= text-white title="Modifier">
                                    <i class="fa fa-check"></i> Modifier </button>




                            </div>

                            <div class="col-lg-3">
                                <button type="button" class="btn btn-danger btn-primary  btn-lg mb-1 mx-auto z-depth-5 btn-rounded ">
                                    <a href="{{ path('entreprise_index') }}"class= text-white title="Annuler"><i class="fa fa-ban"></i>Annuler </a></button>
                            </div>

                        </div>

                    </div>
                </div>
                </aside>

        </div>
    </div>
    {{ form_end(form) }}
    {% endblock %}

