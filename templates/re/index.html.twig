{% extends 'base.html.twig' %}

{% block title %}RE index{% endblock %}

{% block body %}




    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">

                    <div class="chat-room-head ">

                        <h2><i class="fa fa-angle-right"></i> liste des re</h2>


                    </div>

                    <br>
                    <div class="col-lg-1">
                        <button type="button" class="btn btn-primary btn-success btn-lg color-block mb-2 mx-12 z-depth-1 btn-rounded">
                            <a href="{{ path('re_new') }}" ><i class="text-white fa fa-user-plus">  re </i> </a></button>
                    </div>

                    <thead>
                    <tr>
                        <th>nom</th>
                        <th>prenom</th>
                        <th>adress</th>
                        <th>tel</th>
                        <th>Email</th>
                        <th>photo</th>

      <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for re in res %}
                        <tr>
                        <td>{{ re.user }}</td>
                        <td>{{ re.user.getPrenom }}</td>
                        <td>{{ re.user.getAdress}}</td>
                        <td>{{ re.user.getTel}}</td>
                        <td>{{ re.user.getEmail }}</td>
                        <td><img src="{{ asset('uploads/images/' ~ re.user.getPhoto) }}" class="centre" width="120" height="90"></td>
                        <td>
                            <div class="row mt">

                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <div class="col-lg-3">

                                        <button type="button"class="btn btn-theme02">

                                            <a href="{{ path('re_show', {'id': re.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i> </a></button>

                                        </div>
                                    </div>
                                    <div class="form-group">
<div class="col-lg-3">
                                        <button type="button"class="btn btn-info">
                                            <a href="{{ path('re_edit', {'id': re.id}) }}"title="Modifier" ><i class="text-white fa fa-pencil "></i></a></button>
                                    </div>
                                    </div>
                                </form>
                            </div>
                        </td>


                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>

            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}