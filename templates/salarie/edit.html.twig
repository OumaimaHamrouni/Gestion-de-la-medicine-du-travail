
{% extends 'base.html.twig' %}

{% block title %}Edit Salarie{% endblock %}

{% block body %}


    <div class="wrapper site-min-height">
        <!-- page start-->
        <div class="chat-room mt">
            <div class="col-lg-12">
                <aside class="mid-side">
                    <div class="chat-room-head">
                        {{ form_start(form  , {'action': path('salarie_edit', {'id': salarie.id})}) }}
                        <h3>Profil</h3>

                        <div class="group-row">
                        <div class="col-md-4 centered">
                            <div class="profile-pic">
                                <p><img src="{{ asset('uploads/images/' ~ salarie.photo) }}"></p>

                            </div>

                        </div>



                    </div>

                    <div class="group-rom">
                        <div class="first-part odd">Matricule</div>
                        <div class="second-part"> {{ form_widget(form.matricule, {'attr':{'class':'form-control'}}) }}</div>

                    </div>
                        <div class="group-rom">
                            <div class="first-part odd">N_Caisse_Nationale </div>
                            <div class="second-part">  {{ form_widget(form.N_Caisse_Nationale, {'attr':{'class':'form-control'}}) }}</div>
                        </div>
                        <div class="group-rom">
                            <div class="first-part odd">CIN</div>
                            <div class="second-part">  {{ form_widget(form.cin, {'attr':{'class':'form-control'}}) }}</div>
                        </div>

                    <div class="group-rom">
                        <div class="first-part odd">Nom</div>
                        <div class="second-part"> {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}</div>

                    </div>

                    <div class="group-rom">
                        <div class="first-part odd">Prenom</div>
                        <div class="second-part">  {{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}</div>

                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">numéro de téléphone <i class="fa fa-phone" aria-hidden="true"></i></div>
                        <div class="second-part">  {{ form_widget(form.tel, {'attr':{'class':'form-control'}}) }}</div>
                    </div>

                    <div class="group-rom">
                        <div class="first-part odd">Adress  <i class="fa fa-home" aria-hidden="true"></i></div>
                        <div class="second-part">{{ form_widget(form.adress, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Date de naissance  <i class="fa fa-birthday-cake" aria-hidden="true"></i></div>
                        <div class="second-part">  {{ form_widget(form.date_de_naissance, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Genre </div>
                        <div class="second-part">  {{ form_widget(form.genre, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Statut </div>
                        <div class="second-part">  {{ form_widget(form.statut, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">Poste </div>
                        <div class="second-part">  {{ form_widget(form.ID_PT, {'attr':{'class':'form-control'}}) }}</div>
                    </div>
                    <div class="group-rom">
                        <div class="first-part odd">photo </div>
                        <div class="second-part">  {{ form_widget(form.photo, {'attr':{'class':'form-control'}}) }}</div>
                    </div>

                    </div>
                    <div class="group-rom ">
                        <div class="row justify-content-center">
                            <div class="col-lg-3">
                                <br>
                                <button type="submit" class="btn btn-success btn-lg mb-1 mx-auto z-depth-5 btn-rounded " value="{{ button_label|default }}"class= text-white title="Modifier">
                                    <i class="fa fa-check"></i> Modifier </button>




                            </div>

                            <div class="col-lg-3">
                                <br>
                                <button type="button" class="btn btn-danger btn-primary  btn-lg mb-1 mx-auto z-depth-5 btn-rounded ">
                                    <a href="{{ path('salarie_index') }}"class= text-white title="Annuler"><i class="fa fa-ban"></i>Annuler </a></button>
                            </div>

                        </div>

                    </div>

                </aside>

        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

