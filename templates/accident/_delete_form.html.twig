<form method="post" action="{{ path('accident_delete', {'id': accident.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accident.id) }}">

    <div class="group-row">
        <div class="form-group">
            <div class="pull-right col-lg-1">
                <button  class="btn btn-primary btn-danger color-block  btn-lg  mb-3 mx-auto z-depth-1 btn-rounded"><i class="fa fa-trash" aria-hidden="true"></i> </button>

            </div>




</form>
