{% extends 'base.html.twig' %}

{% block title %} accident index{% endblock %}

{% block body %}




    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">

                    <div class="chat-room-head ">

                        <h2><i class="fa fa-angle-right"></i> liste des accidents </h2>


                    </div>

                    <br>

                    <thead>
                    <tr>
                        <th>Refrence</th>
                        <th>lieu</th>
                        <th>Etablissement</th>
                        <th>date heure de l'accident</th>


                        <th>Consulter</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for accident in accident %}
                        <tr>


                        <td>{{ accident.ref }}</td>

                        <td>{{ accident.lieu }}</td>
                        <td>{{ accident.etablissement}}</td>
                            <td>{{ accident.dateheureAccident ? accident.dateheureAccident|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <button type="button"class="btn btn-theme02">

                                    <a href="{{ path('accident_show', {'id': accident.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i> </a></button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}