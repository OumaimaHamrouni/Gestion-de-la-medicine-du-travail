% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger dont-show">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div id="login-page">
    <div class="container">
        <form class="form-login" action="{{ path("fos_user_security_check") }}" method="post">
            <h2 class="form-login-heading">sign in now</h2>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
            <div class="login-wrap">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text"class="form-control" placeholder="User name" autofocus id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control" placeholder="Password"id="password" name="_password" required="required" autocomplete="current-password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <div class="modal-footer">

                    <button  class="btn btn-theme btn-block"  value="{{ 'security.login.submit'|trans }} type="submit"><i class="fa fa-lock"></i> SIGN IN </button>
            </div>
            </div>

</form>
    </div></div>

